{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@utils": ["./src/utils"],
      "@routes": ["./src/routes"],
      "@middleware": ["./src/middleware"]
    }
  },
  "include": ["src/**/*.ts"]
}
